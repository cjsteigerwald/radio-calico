# RadioCalico Environment Configuration

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database Configuration
# Options: sqlite, postgres
DATABASE_TYPE=sqlite

# SQLite Configuration (when DATABASE_TYPE=sqlite)
DATABASE_FILE=./database/radiocalico.db

# PostgreSQL Configuration (when DATABASE_TYPE=postgres)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=radiocalico
PG_USER=radiocalico
PG_PASSWORD=radiocalico_password

# PostgreSQL Connection Pool
PG_MAX_CONNECTIONS=20
PG_IDLE_TIMEOUT=30000
PG_CONNECTION_TIMEOUT=2000

# PostgreSQL SSL (optional)
PG_SSL=false
PG_SSL_REJECT_UNAUTHORIZED=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
MAX_REQUEST_SIZE=10mb