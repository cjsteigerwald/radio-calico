# Development Dockerfile for RadioCalico
FROM node:20-alpine

# Install development dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    sqlite \
    git \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies)
RUN npm install

# Expose port for development server
EXPOSE 3000

# Expose debug port for Node.js debugging
EXPOSE 9229

# Use nodemon for hot-reload in development
CMD ["npm", "run", "dev"]