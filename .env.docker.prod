# Production Environment Configuration for Docker
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_FILE=/app/database/radiocalico.db

# Logging
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# CORS Configuration (update with your production domain)
CORS_CREDENTIALS=false
ALLOWED_ORIGINS=https://radiocalico.com,https://www.radiocalico.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Request Size
MAX_REQUEST_SIZE=5mb

# Security
SECURE_COOKIES=true
TRUST_PROXY=true

# Performance
ENABLE_COMPRESSION=true
CACHE_STATIC_ASSETS=true